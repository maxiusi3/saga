{
  "name": "saga-family-biography",
  "version": "1.0.0",
  "description": "AI-powered family biography platform for intergenerational storytelling",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "./scripts/dev-setup.sh",
    "dev": "./scripts/dev-start.sh",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "build": "npm run build --workspaces",
    "build:vercel": "npm run build --workspace=packages/shared && npm run build --workspace=packages/web",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:web": "npm run build --workspace=packages/web",
    "build:mobile": "npm run build --workspace=packages/mobile",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=packages/backend",
    "test:web": "npm run test --workspace=packages/web",
    "test:mobile": "npm run test --workspace=packages/mobile",
    "test:e2e": "playwright test",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "type-check": "npm run type-check --workspaces",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:reset": "npm run db:reset --workspace=packages/backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "test-env:start": "./scripts/test-env-start.sh start",
    "test-env:stop": "./scripts/test-env-start.sh stop",
    "test-env:restart": "./scripts/test-env-start.sh restart",
    "test-env:test": "./scripts/test-env-start.sh test",
    "test-env:logs": "./scripts/test-env-start.sh logs",
    "test-env:clean": "./scripts/test-env-start.sh clean",
    "test-env:health": "./scripts/test-env-start.sh health",
    "test-env:info": "./scripts/test-env-start.sh info",
    "test-env:native": "./scripts/test-env-native.sh start",
    "test-env:native:stop": "./scripts/test-env-native.sh stop",
    "test-env:native:restart": "./scripts/test-env-native.sh restart",
    "test-env:native:logs": "./scripts/test-env-native.sh logs",
    "test-env:native:clean": "./scripts/test-env-native.sh clean",
    "test-env:native:health": "./scripts/test-env-native.sh health",
    "demo:start": "./scripts/demo-start.sh start",
    "demo:stop": "./scripts/demo-start.sh stop",
    "demo:restart": "./scripts/demo-start.sh restart",
    "demo:logs": "./scripts/demo-start.sh logs",
    "demo:clean": "./scripts/demo-start.sh clean",
    "demo:simple": "./scripts/simple-demo.sh start",
    "demo:simple:stop": "./scripts/simple-demo.sh stop",
    "demo:simple:logs": "./scripts/simple-demo.sh logs",
    "demo:simple:test": "./scripts/simple-demo.sh test",
    "demo:bg": "./scripts/start-demo-bg.sh",
    "demo:bg:stop": "./scripts/stop-demo-bg.sh",
    "test:docker-free": "./scripts/test-docker-free.sh",
    "deploy:test": "./scripts/deploy-test.sh deploy",
    "deploy:test:validate": "./scripts/deploy-test.sh validate",
    "deploy:test:rollback": "./scripts/deploy-test.sh rollback",
    "quick-start": "./scripts/quick-start.sh",
    "demo": "npm run dev --workspace=packages/backend -- --demo",
    "api:test": "./scripts/test-api.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}