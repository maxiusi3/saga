{
  "environment": "test",
  "region": "us-east-1",
  "domain": "test.saga-app.com",
  "hostedZoneId": "Z1234567890ABC",
  
  "database": {
    "instanceClass": "db.t3.micro",
    "allocatedStorage": 20,
    "maxAllocatedStorage": 100,
    "multiAz": false,
    "backupRetention": 1,
    "deletionProtection": false,
    "enablePerformanceInsights": false,
    "monitoringInterval": 0
  },
  
  "redis": {
    "nodeType": "cache.t3.micro",
    "numCacheNodes": 1
  },
  
  "ecs": {
    "apiCpu": 256,
    "apiMemory": 512,
    "webCpu": 256,
    "webMemory": 512,
    "desiredCount": 1,
    "maxCapacity": 2,
    "minCapacity": 1
  },
  
  "s3": {
    "lifecycleRules": {
      "transitionToIA": 7,
      "deleteIncompleteMultipart": 1
    }
  },
  
  "monitoring": {
    "enableContainerInsights": false,
    "logRetention": 3,
    "enableXRay": false
  },
  
  "security": {
    "enableWAF": true,
    "rateLimitPerMinute": 1000,
    "enableGuardDuty": false,
    "enableCloudTrail": false
  },
  
  "tags": {
    "Environment": "test",
    "Project": "Saga",
    "Owner": "Development Team",
    "CostCenter": "Engineering",
    "Purpose": "Testing and QA"
  }
}