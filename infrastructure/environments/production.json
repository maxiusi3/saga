{
  "environment": "production",
  "region": "us-east-1",
  "vpc": {
    "maxAzs": 3,
    "natGateways": 3
  },
  "database": {
    "instanceType": "db.t3.medium",
    "multiAz": true,
    "backupRetention": 7,
    "deletionProtection": true,
    "allocatedStorage": 100,
    "maxAllocatedStorage": 1000,
    "monitoringInterval": 60,
    "performanceInsights": true
  },
  "redis": {
    "nodeType": "cache.t3.medium"
  },
  "ecs": {
    "api": {
      "cpu": 1024,
      "memory": 2048,
      "desiredCount": 2,
      "autoScaling": {
        "minCapacity": 2,
        "maxCapacity": 10,
        "targetCpuUtilization": 70
      }
    },
    "web": {
      "cpu": 512,
      "memory": 1024,
      "desiredCount": 2,
      "autoScaling": {
        "minCapacity": 2,
        "maxCapacity": 10,
        "targetCpuUtilization": 70
      }
    }
  },
  "logging": {
    "retention": "ONE_MONTH"
  },
  "monitoring": {
    "containerInsights": true
  }
}