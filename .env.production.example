# Saga Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================
# DATABASE
# ============================================
# Use a managed PostgreSQL service (recommended)
# Examples:
# - AWS RDS: postgresql://user:pass@xxx.rds.amazonaws.com:5432/saga
# - Railway: postgresql://user:pass@xxx.railway.app:5432/railway
# - Supabase: postgresql://user:pass@xxx.supabase.co:5432/postgres
DATABASE_URL=postgresql://user:password@host:5432/saga_production

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong random key (at least 32 characters)
# Example: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_KEY_AT_LEAST_32_CHARACTERS
JWT_EXPIRES_IN=7d

# ============================================
# SUPABASE
# ============================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3001
NODE_ENV=production

# Your production domain
FRONTEND_URL=https://your-domain.com

# CORS configuration
CORS_ORIGIN=https://your-domain.com

# ============================================
# RATE LIMITING
# ============================================
# Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================
# These are used by Next.js frontend
# API endpoint (can be same domain with /api or subdomain)
NEXT_PUBLIC_API_URL=https://api.your-domain.com
# Or if using same domain: https://your-domain.com/api

# Supabase (same as above)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================

# Email Service (SendGrid, AWS SES, etc.)
# EMAIL_SERVICE_API_KEY=your-email-service-key
# EMAIL_FROM=noreply@your-domain.com

# File Storage (AWS S3, Cloudinary, etc.)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

# Error Tracking (Sentry)
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# Analytics (Google Analytics, Mixpanel, etc.)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ============================================
# NOTES
# ============================================
# 1. Never commit this file with real values to git
# 2. Use strong, unique passwords and keys
# 3. Rotate secrets regularly
# 4. Use different values for staging and production
# 5. Keep backups of your environment variables securely
