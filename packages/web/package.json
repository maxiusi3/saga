{
  "name": "@saga/web",
  "version": "1.0.0",
  "description": "Web application for Facilitators - Saga family biography platform",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:shared && next build",
    "build:shared": "cd ../shared && npm run build",
    "build:vercel": "cd ../shared && npm run build && cd ../web && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:accessibility": "playwright test e2e/accessibility",
    "test:performance": "playwright test e2e/performance",
    "test:visual": "playwright test e2e/visual",
    "clean": "rm -rf .next out"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
