# Server Configuration
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://saga_user:saga_password@localhost:5432/saga_development
DATABASE_TEST_URL=postgresql://saga_user:saga_password@localhost:5433/saga_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_PRIVATE_KEY=your-apple-private-key
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=saga-media-bucket
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# External APIs
OPENAI_API_KEY=your-openai-api-key
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@saga.app
SENDGRID_FROM_NAME=Saga Family Biography
SENDGRID_REPLY_TO_EMAIL=support@saga.app

# Firebase Configuration
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY=your-firebase-private-key

# Web App URL (for email links)
WEB_APP_URL=http://localhost:3000

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
# Alternative: Use service account credentials directly
# GOOGLE_CLOUD_CREDENTIALS={"type":"service_account","project_id":"..."}

# Alternative STT Providers
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# File Upload Limits
MAX_AUDIO_SIZE=52428800
MAX_IMAGE_SIZE=10485760
MAX_AUDIO_DURATION=600

# Monitoring and Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_RELEASE=1.0.0
LOG_LEVEL=info

# Analytics and Monitoring
ANALYTICS_API_KEY=your-analytics-api-key
DATADOG_API_KEY=your-datadog-api-key
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Alert Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
PAGERDUTY_SERVICE_KEY=your-pagerduty-service-key
ALERT_EMAIL_RECIPIENTS=alerts@saga.com,admin@saga.com

# Performance Monitoring
APM_ENABLED=true
METRICS_RETENTION_HOURS=24
TRACE_SAMPLE_RATE=0.1