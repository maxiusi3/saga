{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "noEmit": false
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["dist", "**/*.test.ts", "**/*.spec.ts", "node_modules", "knexfile.js", "knexfile.test.js"],
  "ts-node": {
    "esm": false
  }
}