# 简化版本的环境变量 - 不需要 Docker
NODE_ENV=development
PORT=3001
API_BASE_URL=http://localhost:3001

# 使用 SQLite 内存数据库进行快速测试
DATABASE_URL=sqlite::memory:
DATABASE_TEST_URL=sqlite::memory:

# 不使用 Redis，使用内存存储
REDIS_URL=

# JWT Configuration
JWT_SECRET=dev-super-secret-jwt-key-for-local-testing-only
JWT_REFRESH_SECRET=dev-super-secret-refresh-key-for-local-testing-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# 其他配置保持简单
WEB_APP_URL=http://localhost:3000
LOG_LEVEL=debug
APM_ENABLED=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# 禁用外部服务
OPENAI_API_KEY=
STRIPE_SECRET_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SENDGRID_API_KEY=
FIREBASE_SERVER_KEY=