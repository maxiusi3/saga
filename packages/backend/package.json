{
  "name": "@saga/backend",
  "version": "1.0.0",
  "description": "Backend API server for Saga family biography platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "dev-simple": "nodemon src/dev-server.ts",
    "dev-test": "nodemon src/test-server.ts",
    "demo": "nodemon src/demo-server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:unit": "jest --testPathPattern=\"src/.*\\.test\\.ts$\" --testPathIgnorePatterns=\"integration|performance|e2e\"",
    "test:integration": "jest --testPathPattern=\"integration\"",
    "test:performance": "jest --testPathPattern=\"performance\" --testTimeout=300000",
    "test:security": "jest --testPathPattern=\"security\"",
    "test:accessibility": "jest --testPathPattern=\"accessibility\"",
    "test:e2e": "jest --testPathPattern=\"e2e\" --testTimeout=300000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:comprehensive": "node scripts/run-comprehensive-tests.js",
    "test:all": "jest --passWithNoTests",
    "db:migrate": "knex migrate:latest",
    "db:migrate:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "prompts:list": "ts-node src/scripts/manage-prompts.ts list",
    "prompts:add": "ts-node src/scripts/manage-prompts.ts add",
    "prompts:stats": "ts-node src/scripts/manage-prompts.ts stats",
    "prompts:validate": "ts-node src/scripts/manage-prompts.ts validate",
    "prompts:test": "ts-node src/scripts/manage-prompts.ts test-generation",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google-cloud/speech": "^6.0.0",
    "@saga/shared": "file:../shared",
    "@sendgrid/mail": "^8.1.5",
    "@sentry/node": "^7.81.1",
    "@sentry/tracing": "^7.81.1",
    "@types/jszip": "^3.4.0",
    "aws-sdk": "^2.1498.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "commander": "^11.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.4.0",
    "fluent-ffmpeg": "^2.1.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "knex": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.3",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.7",
    "stripe": "^14.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/passport-jwt": "^3.0.13",
    "@types/pg": "^8.10.9",
    "@types/sharp": "^0.32.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  }
}
